<body>
    <%-include('./includes/navbar.ejs')%>
        <h1>
            Edit Your Information
        </h1>

        <form action="/listings/<%= item._id %>?_method=PUT" method="post">
            <input type="text" name="itemDetails[title]" value="<%= item.title %>">
            <br>
            <br>
            <textarea name="itemDetails[description]" id="main-info" cols="30"
                rows="10">  <%= item.description%>  </textarea>
            <br>
            <br>
            <input type="text" name="itemDetails[image][url]" value="<%= item.image.url %>">
            <br>
            <br>
            <input type="number" name="itemDetails[price]" value="<%= item.price %>">
            <br>
            <br>
            <input type="text" name="itemDetails[location]" value="<%= item.location%>">
            <br>
            <br>
            <input type="text" name="itemDetails[country]" value="<%= item.country %>">
            <br>
            <br>
            <button>Save</button>
        </form>

        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
